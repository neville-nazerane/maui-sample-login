<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginSample.Pages.EntryPage"
             Title="EntryPage">

    <Grid RowDefinitions="60, 40, 40, *, auto"
          Padding="20"
          RowSpacing="30">

        <Entry Grid.Row="1"
               Placeholder="Field 1" />

        <Entry Grid.Row="2"
               Placeholder="Field 2" />

        <Grid Grid.Row="4"
              ColumnDefinitions="*, *"
              ColumnSpacing="20">

            <Button Text="Back"
                    Clicked="Button_Clicked" />

            <Button Grid.Column="1" 
                    Text="GO" />
            
        </Grid>

    </Grid>
</ContentPage>