<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoginSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:LoginSample.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="LoginSample">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="login" />

    <ShellContent
        Title="Second Page"
        ContentTemplate="{DataTemplate pages:EntryPage}"
        Route="notlogin" />

</Shell>
